<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.svistoyanov.mj.entity">
    <class name = "User" table = "users">

        <id name = "id" column = "user_id" type = "org.hibernate.type.UUIDCharType" >

        </id>
        <property name = "version" column = "version" type = "int"/>
        <property name = "email" column = "email" type = "string" not-null="true" unique="true" length="20"/>
        <property name = "username" column = "username" type = "string" not-null="true" length="20"/>
        <property name = "password" column = "password" type = "string" not-null="true" length="20"/>

    </class>
</hibernate-mapping>
